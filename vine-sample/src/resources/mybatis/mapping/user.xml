<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="vine.sample.mybatis.dao.UserDao">

    <select id="selectUser" parameterType="int" resultType="User">

       <![CDATA[  SELECT * FROM user_test WHERE id = #{id} ]]>

    </select>

    <insert id="insertUser">
         <![CDATA[insert into
        user_test(userId,`name`,password,createTime,updateTime,comment)
        values(#{userId},#{name},#{password},now(),now(),#{comment})
        ]]>
    </insert>

    <insert id="insertAndGetId" useGeneratedKeys="true"  keyProperty="id" parameterType="User">
        <![CDATA[
        insert into
        user_test(userId,`name`,password,createTime,updateTime,comment)
        values(#{userId},#{name},#{password},now(),now(),#{comment})

        ]]>
    </insert>

    <select id="selectUsers" resultType="User">
        <![CDATA[
        SELECT * FROM user_test
        ]]>
    </select>



</mapper>

